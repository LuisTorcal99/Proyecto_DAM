<UserControl x:Class="Proyecto_DAM.View.PerfilView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:Proyecto_DAM.View" 
             xmlns:viewmodel="clr-namespace:Proyecto_DAM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:PerfilViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Perfil de Usuario" 
                   FontFamily="Cascadia Code" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Border Grid.Row="0" Grid.Column="0" 
                Margin="0,0,10,0" 
                CornerRadius="8"
                Padding="15">
            <StackPanel>
                <TextBlock Text="Información Personal" 
                           FontFamily="Cascadia Code" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0"
                               Text="Nombre:" 
                               FontFamily="Cascadia Code"/>
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding Name}" 
                             Height="35" 
                             FontSize="14"
                             FontFamily="Cascadia Code"
                             Background="#f7f2f5" 
                             BorderThickness="0" 
                             Padding="5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Username:" 
                               FontFamily="Cascadia Code"
                               Margin="0,10,0,0"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding UserName}" 
                             FontFamily="Cascadia Code" 
                             Height="35" 
                             FontSize="14"
                             Background="#f7f2f5" 
                             BorderThickness="0" 
                             Padding="5"
                             Margin="0,10,0,0"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" 
                               Text="Email:" 
                               FontFamily="Cascadia Code"
                               Margin="0,10,0,0"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Text="{Binding Email}" 
                             Height="35" 
                             FontSize="14"
                             FontFamily="Cascadia Code"
                             Background="#f7f2f5" 
                             BorderThickness="0" 
                             Padding="5"
                             Margin="0,10,0,0"/>
                </Grid>

                <Button Content="Editar" Margin="0,10,0,0"
                        Command="{Binding EditarCommand}" 
                        Width="120" 
                        Height="40"
                        HorizontalAlignment="Right" 
                        FontFamily="Cascadia Code"
                        Background="#4CAF50" 
                        BorderBrush="Transparent"
                        Foreground="Black"
                        FontWeight="Bold"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="0" Grid.Column="1" 
                Margin="10,0,0,0" 
                CornerRadius="8"
                Padding="15">
            <StackPanel Margin="0,20,0,0">
                <TextBlock Text="Estadísticas" 
                           FontFamily="Cascadia Code" 
                           FontSize="16" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Total Asignaturas:" 
                           FontFamily="Cascadia Code" 
                           Margin="5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                           Text="{Binding TotalAsignaturas}" 
                           FontFamily="Cascadia Code" 
                           Margin="5" 
                           FontWeight="Bold"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Total Eventos:" 
                           FontFamily="Cascadia Code" 
                           Margin="5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                           Text="{Binding TotalEventos}" 
                           FontFamily="Cascadia Code" 
                           Margin="5" 
                           FontWeight="Bold"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" 
                        Text="Total Eventos:" 
                        FontFamily="Cascadia Code" 
                        Margin="5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" 
                    Text="{Binding TotalExamenes}" 
                    FontFamily="Cascadia Code" 
                    Margin="5" 
                    FontWeight="Bold"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" 
                       Text="Notas Aprobadas:" 
                       FontFamily="Cascadia Code" 
                       Margin="5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" 
                       Text="{Binding TotalAprobadas}" 
                       FontFamily="Cascadia Code" 
                       Margin="5" 
                       FontWeight="Bold"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Exámenes Aprobados:" 
                           FontFamily="Cascadia Code" 
                           Margin="5"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" 
                           Text="{Binding TotalExamenesAprobados}" 
                           FontFamily="Cascadia Code" 
                           Margin="5" 
                           FontWeight="Bold"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" 
                       Text="Notas Suspendidas:" 
                       FontFamily="Cascadia Code" 
                       Margin="5"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" 
                           Text="{Binding TotalSuspendidas}" 
                           FontFamily="Cascadia Code" 
                           Margin="5" 
                           FontWeight="Bold"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" 
                           Text="Exámenes Suspendidos:" 
                           FontFamily="Cascadia Code" 
                           Margin="5"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" 
                           Text="{Binding TotalExamenesSuspendidos}" 
                           FontFamily="Cascadia Code" 
                           Margin="5" 
                            FontWeight="Bold"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" 
                           Text="Notas Pendientes:" 
                           FontFamily="Cascadia Code" 
                           Margin="5"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" 
                           Text="{Binding TotalPendientes}" 
                           FontFamily="Cascadia Code" 
                           Margin="5" 
                           FontWeight="Bold"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" 
                           Text="Exámenes Pendientes:" 
                           FontFamily="Cascadia Code" 
                           Margin="5"/>
                    <TextBlock Grid.Row="8" Grid.Column="1" 
                           Text="{Binding TotalExamenesPendientes}" 
                           FontFamily="Cascadia Code" 
                           Margin="5" 
                           FontWeight="Bold"/>

                </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.ColumnSpan="2"
            Margin="20,20,20,10"
            Padding="10"
            Background="#f4f4f4"
            CornerRadius="12"
            BorderBrush="#ddd"
            BorderThickness="1">

            <StackPanel>
                <TextBlock Text="Resumen de Notas"
                   FontFamily="Cascadia Code"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

                <lvc:CartesianChart Series="{Binding Series}" 
                            LegendLocation="Right"
                            Height="250"
                            Width="Auto"
                            Foreground="Black"
                            Margin="0,0,0,0">

                    <!-- Eje X -->
                    <lvc:CartesianChart.AxisX>
                        <lvc:Axis Labels="{Binding XLabels}"
                          FontSize="12"
                          FontFamily="Cascadia Code"/>
                    </lvc:CartesianChart.AxisX>

                    <!-- Eje Y -->
                    <lvc:CartesianChart.AxisY>
                        <lvc:Axis Title="Nº Notas"
                          LabelFormatter="{Binding YFormatter}"
                          FontSize="11"
                          FontFamily="Cascadia Code"
                          MinValue="0" />
                    </lvc:CartesianChart.AxisY>

                </lvc:CartesianChart>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
