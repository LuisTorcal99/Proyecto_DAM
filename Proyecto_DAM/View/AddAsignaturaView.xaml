<Window x:Class="Proyecto_DAM.View.AddAsignaturaView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Proyecto_DAM.View"
        xmlns:viewmodel="clr-namespace:Proyecto_DAM.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:AddAsignaturaViewModel}"
        mc:Ignorable="d"
        Title="Añadir Asignatura"
        Height="450"
        Width="600"
        Background="White"
        MinHeight="450" MinWidth="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <Label Content="Añadir Asignatura" 
               FontFamily="Cascadia Code" 
               FontSize="24" 
               FontWeight="Bold" 
               Foreground="#2C3E50" 
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- Formulario -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">

            <!-- Nombre -->
            <StackPanel>
                <TextBlock Text="Nombre:" 
                           FontFamily="Cascadia Code" 
                           FontSize="14" 
                           Foreground="Black"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" 
                         Height="35" 
                         FontSize="14"
                         FontFamily="Cascadia Code"
                         Background="#f7f2f5" 
                         BorderThickness="0" 
                         Padding="5"/>
            </StackPanel>

            <!-- Descripción -->
            <StackPanel>
                <TextBlock Text="Descripción:" 
                           FontFamily="Cascadia Code" 
                           FontSize="14" 
                           Foreground="Black"/>
                <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}" 
                         Height="80" 
                         FontSize="14"
                         FontFamily="Cascadia Code"
                         AcceptsReturn="True"
                         Background="#f7f2f5" 
                         BorderThickness="0" 
                         Padding="5"/>
            </StackPanel>

            <!-- Créditos -->
            <StackPanel>
                <TextBlock Text="Créditos/Horas:" 
                           FontFamily="Cascadia Code" 
                           FontSize="14" 
                           Foreground="Black"/>
                <TextBox Text="{Binding Creditos, UpdateSourceTrigger=PropertyChanged}" 
                         Height="35" 
                         FontSize="14"
                         FontFamily="Cascadia Code"
                         Background="#f7f2f5" 
                         BorderThickness="0" 
                         Padding="5"/>
            </StackPanel>
        </StackPanel>

        <!-- Botón Guardar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Guardar" 
                    Command="{Binding GuardarCommand}" 
                    Width="120" 
                    Height="40"
                    FontFamily="Cascadia Code"
                    Background="#4CAF50" 
                    BorderBrush="Transparent"
                    Foreground="Black"
                    FontWeight="Bold"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
